@model IEnumerable<HotDesc.Models.Workplace>
@{
    ViewData["Title"] = "Editing";
    Layout = "_LayoutForAdmin";
}
<link rel="stylesheet" type="text/css" href="/css/BGindex.css" />
<table class="table">
    <tr><td>Id</td><td>Id заказа</td><td>Описание</td><td>Предметы</td><td>Используется ли</td></tr>
    @foreach (var item in Model)
    {
        <tr><td>@item.Id</td><td>@item.ReservationId</td><td>@item.Description</td><td>@item.Devices</td><td>@item.IsInUse</td></tr>
    }
</table>

<form method="post" asp-action="Edit" asp-controller="Admin">
    <div class="lbl">
        <strong style="color:#fff" for="id"> Номер стола:</strong>
        <select name="id">
            @foreach (var item in Model)
            {
                <option value="@item.Id">@item.Id</option>
            }
        </select>

        <input type="text" name="description" placeholder="Description" />
    </div>

    <div class="lp">

        <div>
            @Html.CheckBox("mouse", false)
            <label for="mouse">Mouse</label>
        </div>

        <div>
            @Html.CheckBox("keyboard", false)
            <label for="keyboard">Keyboard</label>
        </div>

        <div>
            @Html.CheckBox("systemUnit", false)
            <label for="systemUnit">System unit</label>
        </div>

        <div>
            @Html.CheckBox("monitor", false)
            <label for="monitor">Monitor</label>
        </div>

        <div>
            @Html.CheckBox("notebook", false)
            <label for="notebook">Notebook</label>
        </div>
    </div>

    <div>
        <input type="submit" value="Send" />
    </div>
</form>

