@model IEnumerable<HotDesc.Models.Workplace>
@{
    ViewData["Title"] = "Admin Home Page";
    Layout = "_LayoutForAdmin";
}
<link rel="stylesheet" type="text/css" href="/css/BGindex.css" />
<body>
    <table class="table">
        <thead>
            <tr><td></td><td>ReservationCode</td><td>Devices</td><td>Description</td><td>Busy?</td></tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr><td>@item.Id</td><td>@item.ReservationId</td><td>@item.Devices</td><td>@item.Description</td><td>@item.IsInUse</td></tr>
        }
    </table>
    <div class="lp">
        <form method="post" asp-action="DeleteWorkplace" asp-controller="Admin">
            <div class="lbl">
                <strong for="id">Select The Entry To Delete</strong>
                <select name="id">
                    @foreach (var item in Model)
                    {                       
                        <option value="@item.Id">@item.Id</option>
                    }
                </select>
                <input type="submit" value="Delete" />
            </div>
        </form>
    </div>
</body>

