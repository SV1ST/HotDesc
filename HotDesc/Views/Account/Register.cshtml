@model HotDesc.Models.RegisterModel
@{
    ViewData["Title"] = "Registration";
}

<link rel="stylesheet" type="text/css" href="~/css/registerLogin.css" />
<body>
    <div class="form">
        <h2>Registration</h2>
        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div>
                    <input type="text" asp-for="Name" placeholder="Name" />
                    <span asp-validation-for="Name" />
                </div>
                <div>
                    <input type="text" asp-for="Surname" placeholder="Surname" />
                    <span asp-validation-for="Surname" />
                </div>
                <div>
                    <input type="text" asp-for="Login" placeholder="Login" />
                    <span asp-validation-for="Login" />
                </div>
                <div>
                    <input type="password" asp-for="Password" placeholder="Password" />
                    <span asp-validation-for="Password" />
                </div>
                <div>
                    <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" />
                </div>
                <div>
                    <input type="submit" value="Registration" />
                </div>
                <a asp-action="Login" type="text" asp-controller="Account">login</a>
            </div>
        </form>
    </div>
</body>